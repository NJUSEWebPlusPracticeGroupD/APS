<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="resource-shift-01" author="rollingegg">
        <createTable tableName="resource_to_shift" remarks="资源班次表">
            <column name="id" type="int" remarks="id" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="resource_id" type="int" remarks="资源代码">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="shift_code" type="tinyint(1)" remarks="班次代码(0全天 1早班 2晚班 3休息)">
                <constraints nullable="false"/>
            </column>
            <column name="start_day" type="int" remarks="开始星期(几)">
                <constraints nullable="false"/>
            </column>
            <column name="end_day" type="int" remarks="结束星期(几)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>